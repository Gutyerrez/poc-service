{
  "compilerOptions": {
    /**
      * Java Script settings
      */

    "target": "ESNext",
    "module": "CommonJS",

    /**
      * Folder settings
      */

    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "Cache/*": [ "cache/*" ],
      "Exceptions/*": [ "exceptions/*" ],
      "Contracts/*": [ "contracts/*" ],
      "Misc/*": [ "misc/*" ],
      "Storage/*": [ "storage/*" ]
    },

    /**
      * Project settings
      */

    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
  }
}
