{
  "compilerOptions": {
    /**
      * Java Script settings
      */

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "declaration": true,

    /**
      * Folder settings
      */

    "outDir": "build",
    "baseUrl": "./src",

    /**
      * Paths settings
      */

    "paths": {
      "Cache/*": [ "cache/*" ],
      "Exceptions/*": [ "exceptions/*" ],
      "Contracts/*": [ "contracts/*" ],
      "Misc/*": [ "misc/*" ],
      "Storage/*": [ "storage/*" ]
    },

    /**
      * Project settings
      */

    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
